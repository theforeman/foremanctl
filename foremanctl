#!/bin/bash

OBSAH_NAME=foremanctl
OBSAH_BASE=$(dirname $(readlink -f $0))
OBSAH_DATA=${OBSAH_BASE}/src
OBSAH_INVENTORY=${OBSAH_BASE}/inventories
OBSAH_STATE=${OBSAH_BASE}/.var/lib/foremanctl
OBSAH_PERSIST_PARAMS=true
export OBSAH_NAME OBSAH_DATA OBSAH_INVENTORY OBSAH_STATE OBSAH_PERSIST_PARAMS

ANSIBLE_LOG_PATH=${OBSAH_BASE}/.var/lib/foremanctl/foremanctl.log
ANSIBLE_COLLECTIONS_PATH=${OBSAH_BASE}/build/collections/foremanctl
ANSIBLE_COLLECTIONS_SCAN_SYS_PATH=false
export ANSIBLE_LOG_PATH ANSIBLE_COLLECTIONS_PATH ANSIBLE_COLLECTIONS_SCAN_SYS_PATH

exec obsah "$@"
