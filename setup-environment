#!/bin/bash

if [[ -z "${GITHUB_ACTIONS}" ]]; then
  python -m venv .venv
  source .venv/bin/activate
fi
pip install -r src/requirements.txt
pip install -r development/requirements.txt
if [[ -f src/requirements-lock.yml ]]; then
  REQUIREMENTS=src/requirements-lock.yml
else
  REQUIREMENTS=src/requirements.yml
fi
ANSIBLE_COLLECTIONS_PATH=./build/collections/foremanctl ANSIBLE_COLLECTIONS_SCAN_SYS_PATH=false ansible-galaxy install -r ${REQUIREMENTS}
ANSIBLE_COLLECTIONS_PATH=./build/collections/forge ANSIBLE_COLLECTIONS_SCAN_SYS_PATH=false ansible-galaxy install -r development/requirements.yml

printf "\n\nSetup complete.\n"
printf "Activate the virtualenv 'source .venv/bin/activate'.\n"
printf "Then run the cli using './foremanctl'.\n"
